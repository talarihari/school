<h1>Listing Teachers</h1>
 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Experince</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.age %></td>
        <td><%= teacher.experience %></td>
        <td><%= link_to "show", teacher %></td>
        <td><%= link_to "edit", edit_teacher_path(teacher) %></td>
        <td><%= link_to "delete",teacher,method: :delete, data:{confirm: "are you sure?"} %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>

<%= link_to "New Teacher", new_teacher_url %>